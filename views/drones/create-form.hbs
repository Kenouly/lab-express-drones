<h2>Create a new drone</h2>
<div class="form">
    <form action="/drones/create" method="post">
        <div>
            <label for="name">Name</label>
            <input type="text" name="name">
        </div>
        <div>
            <label for="propellers">Propellers</label>
            <input type="number" name="propellers">
        </div>
        <div>
            <label for="maxSpeed">Max Speed (meters per second)</label>
            <input type="number" name="maxSpeed">
        </div>
        <div>
            <button type="submit">Create drone</button>
        </div>
    </form>
</div>
